<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.MyTheme.TextView.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/default_bold_txt_color</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.MyTheme.TextView.Body" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/default_bold_txt_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="confirm_btn_style" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/bg_button_confirm</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.MyTheme.Button.Primary" parent="Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button_primary</item>
    </style>

    <style name="edit_text_top_label_txt" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#8B8B8B</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="edit_text_text_style" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#313131</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ems">10</item>
    </style>

    <style name="title_text_style" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
